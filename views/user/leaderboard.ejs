<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Neurone Onuraunon - Practice Problems</title>
    <%- include(isAdmin ? "../admin/admin-header" : "header" ) %>
        <!-- Problems Section -->
        <section id="problem-set">
            <div class="container mt-5">
                <div id="table-title">
                    <h1>Laderboard</h1>
                </div>
                <hr id="horizontal-rule">
            </div>



            <div class="row custom-row">
                <div class="col left-column">
                    <div class="container mt-2">
                        <table class="table table-striped table-hover leaderboard-table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Solved</th>
                                    <th scope="col">Success Rate</th>
                                    <th scope="col">Rating</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach((user, index)=>{%>
                                    <tr>
                                        <th scope="row">
                                            <%= index + 1 %>
                                        </th>
                                        <td>
                                            <%= user.name %>
                                        </td>
                                        <td>
                                            <%= user.problemsSolved %>
                                        </td>
                                        <td>
                                            <div class="progress" role="progressbar"
                                                aria-label="example" aria-valuenow="75"
                                                aria-valuemin="0" aria-valuemax="100">
                                                <div class="progress-bar custom-progressbar"
                                                    style="width: <%= Math.floor(user.problemsSolved*100/user.problemAttempted) %>%">
                                                    <%= Math.floor(user.problemsSolved*100/user.problemAttempted) %>%
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <%= user.totalPoints %>
                                        </td>
                                    </tr>
                                    <%}); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

